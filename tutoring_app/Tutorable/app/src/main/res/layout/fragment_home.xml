<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/header_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:text="@string/header_welcome"
        android:fontFamily="sans-serif-medium"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollview_your_appointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <ScrollView
        android:id="@+id/scrollview_your_appointments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box_with_shadow"
        android:minHeight="100dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/button_look_for_tutors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_welcome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/header_your_appointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/box_with_shadow"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:text="@string/header_your_appointments"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_with_shadow"
                android:padding="@android:dimen/app_icon_size"
                android:textColor="#908A88"
                android:fontFamily="sans-serif"
                android:text="Kyler Preston
                Rating: 4.9/5
                East Campus - Fox 103
                Wednesday: 6:00PM - 9:00 PM"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_with_shadow"
                android:padding="@android:dimen/app_icon_size"
                android:textColor="#908A88"
                android:fontFamily="sans-serif"
                android:text="Josh Everett
                Rating: 4.2/5
                East Campus - Fox 103
                Wednesday: 6:00PM - 9:00 PM"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/part3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_with_shadow"
                android:padding="@android:dimen/app_icon_size"
                android:textColor="#908A88"
                android:fontFamily="sans-serif"
                android:text="Vincent Gillespie
                Rating: 3.4/5
                South - O'Leary 159
                Wednesday: 6:00PM - 9:00 PM"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_look_for_tutors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="true"
        android:text="@string/button_look_for_tutors"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_your_appointments" />
</androidx.constraintlayout.widget.ConstraintLayout>